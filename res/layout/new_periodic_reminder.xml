<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/new_event_view"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:minWidth="270dip"
	android:orientation="vertical" >
<LinearLayout
   android:orientation="vertical"
   android:layout_width="fill_parent"
   android:layout_height="wrap_content"
   android:paddingLeft="10dip"
   android:paddingRight="10dip"
   >

<LinearLayout
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Set date and time for first occurence:"
		android:paddingBottom="8dip" />	
</LinearLayout>

// DATE
<LinearLayout
	android:id="@+id/new_periodic_reminder_date_view"
	android:orientation="horizontal"
	android:layout_width="fill_parent"
	android:background="@drawable/flash_on_click_dialog"
	android:layout_height="wrap_content">
<ImageView
	android:id="@+id/new_periodic_reminder_date_pick_image"
	android:layout_gravity="center_vertical"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:paddingRight="10dip"
	android:src="@drawable/date2_48" />
	<TextView
	android:id="@+id/new_periodic_reminder_date_label"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_gravity="center_vertical"
	android:textSize="20dip"
	android:text="" />
</LinearLayout>

// TIME
<LinearLayout
	android:id="@+id/new_periodic_reminder_time_view"
	android:orientation="horizontal"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content" 
	android:background="@drawable/flash_on_click_dialog">
<ImageView
	android:id="@+id/new_periodic_reminder_time_pick_image"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_gravity="center_vertical"
	android:paddingRight="10dip"
	android:src="@drawable/time2_48" />
	
<TextView
	android:id="@+id/new_periodic_reminder_time_label"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_gravity="center_vertical"
	android:textSize="20dip"
	android:text="" />
</LinearLayout>

// Space
<LinearLayout
	android:layout_width="fill_parent"
	android:layout_height="15dip">
</LinearLayout>

// Repeat interval
<LinearLayout
	android:id="@+id/new_periodic_reminder_interval_view"
	android:orientation="horizontal"
	android:layout_width="fill_parent"
	android:background="@drawable/flash_on_click_dialog"
	android:layout_height="wrap_content">
<ImageView
	android:id="@+id/new_periodic_reminder_interval_image"
	android:layout_gravity="center_vertical"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:paddingRight="10dip"
	android:src="@drawable/timer2_48" />
	<TextView
	android:id="@+id/new_periodic_reminder_interval_label"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_gravity="center_vertical"
	android:textSize="20dip"
	android:text="Set interval" />
</LinearLayout>
	
// DESCRIPTION
<TextView
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:paddingTop="10dip"
	android:text="@string/description_label" />
<EditText
	android:id="@+id/new_periodic_reminder_description"
	android:gravity="top"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:inputType="textCapSentences"
	android:text="" />
	
// BUTTONS
<LinearLayout
   android:orientation="horizontal"
   android:layout_width="fill_parent"
   android:layout_height="wrap_content"
   android:paddingTop="10dip"
   >
<Button	
	android:id="@+id/new_periodic_reminder_submit_button"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:layout_weight="50"
	android:text="Set reminder" />
<Button	
	android:id="@+id/new_periodic_reminder_cancel_button"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:layout_weight="50"
	android:text="Cancel" />
</LinearLayout>
</LinearLayout>
</ScrollView>