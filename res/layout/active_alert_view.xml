<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/single_alert_view"
	android:orientation="horizontal"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:minHeight="70dip"
	android:paddingTop="5dip"
	android:paddingBottom="5dip"
	android:gravity="top"
	android:background="@drawable/flash_on_click"
	>
	<ImageView
		android:id="@+id/single_event_icon"
		android:src="@drawable/advertisment_32"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="top"
		android:layout_marginLeft="10dip"
		android:layout_marginRight="10dip" />
	<LinearLayout
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="top"
		>
		<TextView
			android:id="@+id/single_event_datetime"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:textSize="20dip"
			android:text="" />
		<TextView
			android:id="@+id/single_event_datetime_interval"
			android:visibility="gone"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:textColor="#999"
			android:textSize="15dip"
			android:text="" />
		<TextView
			android:id="@+id/single_event_description"
			android:visibility="gone"
			android:paddingTop="5dip"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:textColor="#aaa"
			android:textSize="20dip"
			android:text="" />
	</LinearLayout>
</LinearLayout>
